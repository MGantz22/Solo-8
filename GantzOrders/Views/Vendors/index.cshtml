@{
  Layout = "_Layout";
}
@using GantzOrders.Models;
    
<h1> Vendors:</h1>

@if(Model.Count == 0)
{
  <h2>No Vendors To Display</h2>
}

@foreach (Vendor vendor in Model)
{
<h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3>
}

<p><a href='/vendors/new'>Add A New Vendor</a></p>
<p><a href='/'>Run Home Smalls</a></p>
