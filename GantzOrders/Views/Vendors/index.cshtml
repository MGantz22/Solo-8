<!DOCTYPE html>
<html>
  <head>
    <title>Vendors</title>
    <link 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" 
      rel="stylesheet" 
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" 
      crossorigin="anonymous">
    <meta charset='utf-8'>
  </head>
  <body>
    <h1>Your List of Vendors:</h1>
    @using GantzOrders.Models;
      @if(Model.Count == 0)
      {
        <p>No Vendors To Display</p>
      }

      @foreach (Vendor item in Model)
      {
        <h3><a href="/vendors/@item.Id">@item.Name</a></h3>
      }

      <p><a href='/'>Run Home Smalls</a></p>
  </body>
</html>