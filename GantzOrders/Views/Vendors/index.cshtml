@{
  Layout = "_Layout";
}
    <h1> Vendors:</h1>
    @using GantzOrders.Models;
      @if(Model.Count == 0)
      {
        <p>No Vendors To Display</p>
      }

      @foreach (Vendor item in Model)
      {
        <h3><a href="/vendors/@item.Id">@item.Name</a></h3>
      }

      <p><a href='/vendors/new'>Add a new vendor</a></p>
      <p><a href='/'>Run Home Smalls</a></p>
